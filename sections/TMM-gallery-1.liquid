                    			"fileSize": 2063,
                    			"height": 150,
                    			"url": "https://d3e54v103j8qbb.cloudfront.net/img/image-placeholder.svg",
                    			"width": 150,
                    			"type": "image"
                    		}
                    	],
                    	"group": "Gallery"
                    }
                  </script>
                </a>
              {%- endfor -%}
            {%- endif -%}
          </div>
          <div class="tmm-gallery-columns_right tmm-col tmm-col-6">
            {%- if section.blocks.size > 0 -%}
              {%- for block in section.blocks -%}
                {% capture loop_iteration %}{% cycle 'odd', 'even' %}{% endcapture %}
                {%- if loop_iteration == 'even' -%}
                  <a
                    href="#"
                    class="tmm-gallery-lightbox tmm-inline-block tmm-lightbox"
                  >
                    <div class="tmm-gallery-image_wrap">
                      {%- render 'TMM-placeholder', class: 'tmm-gallery-image' -%}
                      <div class="tmm-gallery-image_overlay">
                        <div class="tmm-visually-hidden"></div>
                      </div>
                    </div>
                    <script
                      type="application/json"
                      class="tmm-json"
                    >
                      {
                      	"items": [
                      		{
                      			"_id": "example_img",
                      			"origFileName": "image-placeholder.svg",
                      			"fileName": "image-placeholder.svg",
                      			"fileSize": 2063,
                      			"height": 150,
                      			"url": "https://d3e54v103j8qbb.cloudfront.net/img/image-placeholder.svg",
                      			"width": 150,
                      			"type": "image"
                      		}
                      	],
                      	"group": "Gallery"
                      }
                    </script>
                  </a>
                {%- endif -%}
              {%- endfor -%}
            {%- else -%}
              {%- for i in (1..3) -%}
                <a
                  href="#"
                  class="tmm-gallery-lightbox tmm-inline-block tmm-lightbox"
                >
                  <div class="tmm-gallery-image_wrap">
                    {%- render 'TMM-placeholder', class: 'tmm-gallery-image' -%}
                    <div class="tmm-gallery-image_overlay">
                      <div class="tmm-visually-hidden"></div>
                    </div>
                  </div>
                  <script
                    type="application/json"
                    class="tmm-json"
                  >
                    {
                    	"items": [
                    		{
                    			"_id": "example_img",
                    			"origFileName": "image-placeholder.svg",
                    			"fileName": "image-placeholder.svg",
                    			"fileSize": 2063,
                    			"height": 150,
                    			"url": "https://d3e54v103j8qbb.cloudfront.net/img/image-placeholder.svg",
                    			"width": 150,
                    			"type": "image"
                    		}
                    	],
                    	"group": "Gallery"
                    }
                  </script>
                </a>
              {%- endfor -%}
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "TMM - Gallery 1",
  "settings": [
    {
      "type": "color",
      "id": "overlay_color",
      "default": "#000000",
      "label": "Overlay color"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 36,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 36,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 20
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Gallery Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
   "presets": [
    {
      "name": "TMM - Gallery 1",
      "blocks": [
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
