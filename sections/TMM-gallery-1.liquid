{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  {%- for block in section.blocks -%}
    {%- if block.settings.image != blank -%}
      {%- if block.settings.object_fit == 'contain' or block.settings.object_fit == 'scale-down' -%}
        .tmm-section-{{ section.id }} .tmm-gallery-image-block_{{ block.id }},
        .tmm-section-{{ section.id }} .tmm-gallery-image-block_{{ block.id }} .tmm-gallery-image {
          --og-width-x-new-height_{{ block.id }}: calc({{ block.settings.image.width }}px * 450);
          width: calc(var(--og-width-x-new-height_{{ block.id }}) / {{ block.settings.image.height}});
          max-width: 100%;
          margin: 0 auto;
        }
      {%- endif -%}

      {%- if block.settings.image_orientation == 'landscape' -%}
        .tmm-section-{{ section.id }} .tmm-gallery-image-block_{{ block.id }} {
          height: 250px;
        }
      {%- endif -%}

      image_orientation

      .tmm-section-{{ section.id }} .tmm-gallery-image-block_{{ block.id }} .tmm-gallery-image {
        object-fit: {{ block.settings.object_fit }};
        object-position: {{ block.settings.object_position }};
      }

      .tmm-section-{{ section.id }} .tmm-gallery-image-block_{{ block.id }} .tmm-gallery-image_overlay {
        background-color: {{ block.settings.overlay_color }};
      }
    {%- endif -%}
  {%- endfor -%}
{%- endstyle -%}

<div class="tmm-relative-container tmm-gallery section-{{ section.id }}-padding tmm-section-{{ section.id }}">
  <div class="tmm-interaction_wrap">
    <div class="tmm-padding-global">
      <div class="tmm-gallery-content">
        <div class="tmm-gallery-columns tmm-row">
          <div class="tmm-gallery-columns_left tmm-col tmm-col-6">
            {%- if section.blocks.size > 0 -%}
              {%- for block in section.blocks -%}
                {% capture loop_iteration_1 %}{% cycle 'cycle_1': 'odd', 'even' %}{% endcapture %}
                {%- if loop_iteration_1 == 'odd' -%}
                  <a
                    href="#"
                    class="tmm-gallery-lightbox tmm-inline-block tmm-lightbox"
                  >
                    <div class="tmm-gallery-image_wrap tmm-gallery-image-block_{{ block.id }} }}">
                      {%- if block.settings.image != blank -%}
                        {% capture sizes %}(max-width: {{ block.settings.image.width | times: 2 }}px) 50vw, {{ block.settings.image.width }}px{% endcapture %}
                        {% capture widths %}{{ block.settings.image.width }}, {{ block.settings.image.width | times: 1.5 | round }}, {{ block.settings.image.width | times: 2 }}{% endcapture %}
                        {{
                          block.settings.image
                          | image_url: width: 600
                          | image_tag:
                            class: 'tmm-gallery-image',
                            widths: widths,
                            height: block.settings.image.height,
                            width: block.settings.image.width,
                            alt: block.settings.alt_text,
                            sizes: sizes,
                            preload: true
                        }}
                      {%- else -%}
                        {%- render 'TMM-placeholder', class: 'tmm-gallery-image' -%}
                      {%- endif -%}
                      <div class="tmm-gallery-image_overlay">
                        <div class="tmm-visually-hidden"></div>
                      </div>
                    </div>
                    <script
                      type="application/json"
                      class="tmm-json"
                    >
                      {
                      	"items": [
                      		{
                      			"_id": "{{ block.settings.image.id }}",
                      			"height": "{{ block.settings.height }}",
                      			"url": "{{ block.settings.image | image_url }}",
                      			"width": "{{ block.settings.width }}",
                      			"type": "image"
                      		}
                      	],
                      	"group": "Gallery"
                      }
                    </script>
                  </a>
                {%- endif -%}
              {%- endfor -%}
            {%- else -%}
              {%- for i in (1..3) -%}
                <a
                  href="#"
                  class="tmm-gallery-lightbox tmm-inline-block tmm-lightbox"
                >
                  <div class="tmm-gallery-image_wrap">
                    {%- render 'TMM-placeholder', class: 'tmm-gallery-image' -%}
                    <div class="tmm-gallery-image_overlay">
                      <div class="tmm-visually-hidden"></div>
                    </div>
                  </div>
                  <script
                    type="application/json"
                    class="tmm-json"
                  >
                    {
                    	"items": [
                    		{
                    			"_id": "example_img",
                    			"origFileName": "image-placeholder.svg",
                    			"fileName": "image-placeholder.svg",
                    			"fileSize": 2063,
                    			"height": 150,
                    			"url": "https://d3e54v103j8qbb.cloudfront.net/img/image-placeholder.svg",
                    			"width": 150,
                    			"type": "image"
                    		}
                    	],
                    	"group": "Gallery"
                    }
                  </script>
                </a>
              {%- endfor -%}
            {%- endif -%}
          </div>
          <div class="tmm-gallery-columns_right tmm-col tmm-col-6">
            {%- if section.blocks.size > 1 -%}
              {%- for block in section.blocks -%}
                {% capture loop_iteration_2 %}{% cycle 'cycle_2': 'odd', 'even' %}{% endcapture %}
                {%- if loop_iteration_2 == 'even' -%}
                  <a
                    href="#"
                    class="tmm-gallery-lightbox tmm-inline-block tmm-lightbox"
                  >
                    <div class="tmm-gallery-image_wrap tmm-gallery-image-block_{{ block.id }} }}">
                      {%- if block.settings.image != blank -%}
                        {% capture sizes %}(max-width: {{ block.settings.image.width | times: 2 }}px) 50vw, {{ block.settings.image.width }}px{% endcapture %}
                        {% capture widths %}{{ block.settings.image.width }}, {{ block.settings.image.width | times: 1.5 | round }}, {{ block.settings.image.width | times: 2 }}{% endcapture %}
                        {{
                          block.settings.image
                          | image_url: width: 600
                          | image_tag:
                            class: 'tmm-gallery-image',
                            widths: widths,
                            height: block.settings.image.height,
                            width: block.settings.image.width,
                            alt: block.settings.alt_text,
                            sizes: sizes,
                            preload: true
                        }}
                      {%- else -%}
                        {%- render 'TMM-placeholder', class: 'tmm-gallery-image' -%}
                      {%- endif -%}
                      <div class="tmm-gallery-image_overlay">
                        <div class="tmm-visually-hidden"></div>
                      </div>
                    </div>
                    <script
                      type="application/json"
                      class="tmm-json"
                    >
                      {
                      	"items": [
                      		{
                      			"_id": "{{ block.settings.image.id }}",
                      			"height": "{{ block.settings.height }}",
                      			"url": "{{ block.settings.image | image_url }}",
                      			"width": "{{ block.settings.width }}",
                      			"type": "image"
                      		}
                      	],
                      	"group": "Gallery"
                      }
                    </script>
                  </a>
                {%- endif -%}
              {%- endfor -%}
            {%- else -%}
              {%- for i in (1..3) -%}
                <a
                  href="#"
                  class="tmm-gallery-lightbox tmm-inline-block tmm-lightbox"
                >
                  <div class="tmm-gallery-image_wrap">
                    {%- render 'TMM-placeholder', class: 'tmm-gallery-image' -%}
                    <div class="tmm-gallery-image_overlay">
                      <div class="tmm-visually-hidden"></div>
                    </div>
                  </div>
                  <script
                    type="application/json"
                    class="tmm-json"
                  >
                    {
                    	"items": [
                    		{
                    			"_id": "example_img",
                    			"origFileName": "image-placeholder.svg",
                    			"fileName": "image-placeholder.svg",
                    			"fileSize": 2063,
                    			"height": 150,
                    			"url": "https://d3e54v103j8qbb.cloudfront.net/img/image-placeholder.svg",
                    			"width": 150,
                    			"type": "image"
                    		}
                    	],
                    	"group": "Gallery"
                    }
                  </script>
                </a>
              {%- endfor -%}
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "TMM - Gallery 1",
  "settings": [
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 36,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 36,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 20
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "select",
          "id": "object_fit",
          "options": [
            {
              "value": "cover",
              "label": "cover"
            },
            {
              "value": "contain",
              "label": "contain"
            },
            {
              "value": "none",
              "label": "none"
            },
            {
              "value": "fill",
              "label": "fill"
            },
            {
              "value": "scale-down",
              "label": "scale-down"
            }
          ],
          "default": "cover",
          "label": "Image fit"
        },
        {
          "type": "select",
          "id": "object_position",
          "options": [
            {
              "value": "bottom",
              "label": "bottom"
            },
            {
              "value": "center",
              "label": "center"
            },
            {
              "value": "left",
              "label": "left"
            },
            {
              "value": "right",
              "label": "right"
            },
            {
              "value": "top",
              "label": "top"
            }
          ],
          "default": "center",
          "label": "Image position"
        },
        {
          "type": "select",
          "id": "image_orientation",
          "options": [
            {
              "value": "landscape",
              "label": "landscape"
            },
            {
              "value": "portrait",
              "label": "portrait"
            }
          ],
          "default": "portrait",
          "label": "Image position"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Image alt text"
        },
        {
          "type": "color",
          "id": "overlay_color",
          "default": "#000000",
          "label": "Overlay color"
        }
      ]
    }
  ],
   "presets": [
    {
      "name": "TMM - Gallery 1",
      "blocks": [
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
