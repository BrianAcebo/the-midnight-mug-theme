{% style %}
  {%- if section.settings.show_line_separators -%}
    .tmm-promo-strip {
    	border-top: 1px solid #000;
    	border-bottom: 1px solid #000;
    }
  {%- endif -%}

  .tmm-promo-strip a,
  .tmm-promo-strip p {
    text-transform: {{ section.settings.text_transformation }};
    text-decoration: {{ section.settings.text_decoration }};
    letter-spacing: {{ section.settings.text_spacing }}px;
  }
{% endstyle %}

<div class="section__tmm-component tmm-promo-strip color-{{ section.settings.color_scheme }} gradient">
  {%- for i in (1..2) -%}
    <div class="tmm-promo-text_wrap">
      {%- for block in section.blocks -%}
        {%- for i in (1..4) -%}
          {%- if block.url != blank -%}
            <a
              {{ block.shopify_attributes }}
              href="{{- block.settings.url -}}"
              role="region"
              class="tmm-promo-text tmm-{{ section.settings.text_style }}"
            >
              {{- block.settings.text -}}
            </a>
          {%- else -%}
            <div
              {{ block.shopify_attributes }}
              role="region"
              class="tmm-promo-text tmm-{{ section.settings.text_style }}"
              aria-label="{{- block.settings.text -}}"
            >
              {{- block.settings.text -}}
            </div>
          {%- endif -%}
        {%- endfor -%}
      {%- endfor -%}
    </div>
  {%- endfor -%}
</div>

{% schema %}
{
  "name": "TMM Promo Bar",
  "max_blocks": 12,
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-4"
    },
    {
      "type": "checkbox",
      "id": "show_line_separators",
      "default": true,
      "label": "Show Line Seperators"
    },
    {
        "type": "select",
        "id": "text_style",
        "options": [
          {
            "value": "body",
            "label": "Body"
          },
          {
            "value": "text-semibold",
            "label": "Subtitle"
          },
          {
            "value": "caption",
            "label": "Caption"
          }
        ],
        "default": "body",
        "label": "Text Style"
      },
        {
        "type": "select",
        "id": "text_transformation",
        "options": [
          {
            "value": "none",
            "label": "None"
          },
          {
            "value": "uppercase",
            "label": "Uppercase"
          },
          {
            "value": "lowercase",
            "label": "Lowercase"
          },
          {
            "value": "capitalize",
            "label": "Capitalize"
          }
        ],
        "default": "capitalize",
        "label": "Text transform"
      },{
        "type": "select",
        "id": "text_decoration",
        "options": [
          {
            "value": "none",
            "label": "None"
          },
          {
            "value": "overline",
            "label": "Overline"
          },
          {
            "value": "underline",
            "label": "Underline"
          },
          {
            "value": "strike",
            "label": "Line-through"
          },
          {
            "value": "over_under",
            "label": "Overline-underline"
          }
        ],
        "default": "none",
        "label": "Text decoration"
      },
      {
        "type": "range",
        "id": "text_spacing",
        "min": 0,
        "max": 50,
        "step": 1,
        "unit": "px",
        "label": "Text spacing",
        "default": 4
      }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement Text",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "Welcome to our store",
          "label": "Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "TMM - Promo Bar",
      "blocks": [
        {
          "type": "announcement"
        }
      ]
    }
  ]
}
{% endschema %}
