{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  {%- if section.settings.show_line_separators -%}
    .tmm-section-{{ section.id }}.tmm-promo-strip {
    	border-top: 1px solid #000;
    	border-bottom: 1px solid #000;
    }
  {%- endif -%}

  .tmm-section-{{ section.id }}.tmm-promo-strip a,
  .tmm-section-{{ section.id }}.tmm-promo-strip div {
    text-transform: {{ section.settings.text_transformation }};
    text-decoration: {{ section.settings.text_decoration }};
    letter-spacing: {{ section.settings.text_spacing }}px;
  }
{%- endstyle -%}

<div class="section__tmm-component tmm-section-{{ section.id }} section-{{ section.id }}-padding tmm-promo-strip color-{{ section.settings.color_scheme }} gradient">
  {%- for i in (1..2) -%}
    <div class="tmm-promo-text_wrap">
      {%- for i in (1..3) -%}
        {%- for block in section.blocks -%}
          {%- if block.link != blank -%}
            <a
              {{ block.shopify_attributes }}
              href="{{- block.settings.link -}}"
              role="region"
              class="tmm-promo-text {{ section.settings.text_style }}"
            >
              {{- block.settings.text -}}
            </a>
          {%- else -%}
            <div
              {{ block.shopify_attributes }}
              role="region"
              class="tmm-promo-text {{ section.settings.text_style }}"
              aria-label="{{- block.settings.text -}}"
            >
              {{- block.settings.text -}}
            </div>
          {%- endif -%}
        {%- endfor -%}
      {%- endfor -%}
    </div>
  {%- endfor -%}
</div>

{% schema %}
{
  "name": "TMM Promo Bar",
  "max_blocks": 3,
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1",
      "info": "Only applicable for themes that have color schemes enabled."
    },
    {
      "type": "checkbox",
      "id": "show_line_separators",
      "default": true,
      "label": "Show line seperators"
    },
    {
      "type": "select",
      "id": "text_style",
      "options": [
        {
          "value": "body",
          "label": "Body"
        },
        {
          "value": "tmm-text-semibold",
          "label": "Subtitle"
        },
        {
          "value": "tmm-caption",
          "label": "Caption"
        }
      ],
      "default": "body",
      "label": "Text style"
    },
    {
      "type": "select",
      "id": "text_transformation",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "uppercase",
          "label": "Uppercase"
        },
        {
          "value": "lowercase",
          "label": "Lowercase"
        },
        {
          "value": "capitalize",
          "label": "Capitalize"
        }
      ],
      "default": "capitalize",
      "label": "Text transform"
    },
    {
      "type": "select",
      "id": "text_decoration",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "overline",
          "label": "Overline"
        },
        {
          "value": "underline",
          "label": "Underline"
        },
        {
          "value": "line-through",
          "label": "Line-through"
        },
        {
          "value": "underline overline",
          "label": "Overline-underline"
        }
      ],
      "default": "none",
      "label": "Text decoration"
    },
    {
      "type": "range",
      "id": "text_spacing",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "Text spacing",
      "default": 4
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    },
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement Text",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "Welcome to our store",
          "label": "Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "TMM - Promo Bar",
      "blocks": [
        {
          "type": "announcement"
        }
      ]
    }
  ]
}
{% endschema %}
