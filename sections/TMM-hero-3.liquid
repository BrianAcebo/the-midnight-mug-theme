{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .tmm-section-{{ section.id }} .tmm-hero3-heading_text {
    text-transform: {{ section.settings.header_text_transformation }};
  }

  .tmm-section-{{ section.id }} .tmm-hero3-body_text {
    text-transform: {{ section.settings.body_text_transformation }};
  }

  .tmm-section-{{ section.id }} .tmm-button {
    transition: 0.2s;
  }

  .tmm-section-{{ section.id }} .tmm-button.tmm-button_{{ section.id }} {
    background-color: {{ section.settings.button_color }};
    border: 1px solid {{ section.settings.button_color }};
    color: {{ section.settings.button_text_color }};
  }

  .tmm-section-{{ section.id }} .tmm-button.tmm-button_{{ section.id }}.tmm-is-secondary {
    background-color: transparent;
    border: 1px solid {{ section.settings.button_color }};
  }

  .tmm-section-{{ section.id }} .tmm-button.tmm-button_{{ section.id }}:hover {
    opacity: 0.8;
  }
{%- endstyle -%}

<header class="tmm-hero3 section-{{ section.id }}-padding tmm-section-{{ section.id }} color-{{ section.settings.color_scheme }} gradient">
  <div class="tmm-interaction_wrap">
    <div class="tmm-padding-global">
      <div class="tmm-container-large">
        <div class="tmm-hero3_container">
          <div class="tmm-margin-bottom tmm-margin-xxlarge">
            <div class="tmm-max-width-xxlarge">
              <div class="tmm-margin-bottom tmm-margin-small">
                <{{ section.settings.heading_size }} class="tmm-hero3-heading_text tmm-heading-style-h1">
                  {{- section.settings.heading -}}
                </{{ section.settings.heading_size }}>
              </div>
              <p class="tmm-newsletter1-body_text">{{- section.settings.body_text -}}</p>
              <div class="tmm-margin-top margin-medium">
                <div class="tmm-button-group">
                  {%- if section.settings.button1_url != blank -%}
                    <a
                      href="{{ section.settings.button1_url }}"
                      class="tmm-button_{{ section.id }} tmm-button-primary tmm-button{% if section.settings.button1_style == 'outline' %} tmm-is-secondary{% endif %}"
                    >
                      {{- section.settings.button1_text -}}
                    </a>
                  {%- endif -%}
                  {%- if section.settings.button2_url != blank -%}
                    <a
                      href="{{ section.settings.button2_url }}"
                      class="tmm-button_{{ section.id }} tmm-button-primary tmm-button{% if section.settings.button2_style == 'outline' %} tmm-is-secondary{% endif %}"
                    >
                      {{- section.settings.button2_text -}}
                    </a>
                  {%- endif -%}
                </div>
              </div>
            </div>
          </div>
          <div class="tmm-hero3-image_wrap">
            {%- if section.settings.image != blank -%}
              {% capture sizes %}(max-width: {{ section.settings.image.width | times: 2 }}px) 50vw, {{ section.settings.image.width }}px{% endcapture %}
              {% capture widths %}{{ section.settings.image.width }}, {{ section.settings.image.width | times: 1.5 | round }}, {{ section.settings.image.width | times: 2 }}{% endcapture %}
              {{
                section.settings.image
                | image_url: width: 2600
                | image_tag:
                  class: 'tmm-hero3-image',
                  widths: widths,
                  height: section.settings.image.height,
                  width: section.settings.image.width,
                  alt: section.settings.image.alt,
                  sizes: sizes,
                  preload: true
              }}
            {%- else -%}
              {%- render 'TMM-placeholder', class: 'tmm-hero3-image' -%}
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

