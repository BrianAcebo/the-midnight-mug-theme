{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .tmm-section-{{ section.id }} .tmm-padding-global {
    max-width: {{ section.settings.page_width }}px;
  }

  .tmm-section-{{ section.id }} .tmm-features4-heading_text {
    text-transform: {{ section.settings.header_text_transformation }};
  }

  .tmm-section-{{ section.id }} .tmm-features4-body_text {
    text-transform: {{ section.settings.body_text_transformation }};
  }

  .tmm-section-{{ section.id }} .tmm-button {
    transition: 0.2s;
  }

  .tmm-section-{{ section.id }} .tmm-button_{{ section.id }}.tmm-button-1 {
    background-color: {{ section.settings.button1_color }};
    border: 1px solid {{ section.settings.button1_color }};
    color: {{ section.settings.button1_text_color }};
  }

  .tmm-section-{{ section.id }} .tmm-button_{{ section.id }}.tmm-button-1.tmm-is-secondary {
    background-color: transparent;
    border: 1px solid {{ section.settings.button1_color }};
  }

  .tmm-section-{{ section.id }} .tmm-button_{{ section.id }}.tmm-button-2 {
    color: {{ section.settings.button2_text_color }};
  }

  .tmm-section-{{ section.id }} .tmm-button.tmm-button_{{ section.id }}:hover {
    opacity: 0.8;
  }
{%- endstyle -%}

<section class="tmm-features4 section-{{ section.id }}-padding tmm-section-{{ section.id }} color-{{ section.settings.color_scheme }} gradient">
  <div class="tmm-padding-global">
    <div class="tmm-container-large">
      <div class="tmm-features4_container">
        <div class="tmm-interaction_wrap">
          <div class="tmm-margin-bottom tmm-margin-xxlarge">
            <div class="tmm-layout-grid tmm-features4-content">
              <div class="tmm-features4-content_left">
                {%- if section.settings.caption_text != blank -%}
                  <div class="tmm-margin-bottom tmm-margin-xsmall">
                    <div class="tmm-text-semibold">{{- section.settings.caption_text -}}</div>
                  </div>
                {%- endif -%}
                <{{ section.settings.heading_size }} class="tmm-features4-heading_text">
                  {{- section.settings.heading -}}
                </{{ section.settings.heading_size }}>
              </div>
              <div class="tmm-features4-content_right">
                <p class="tmm-features4-body_text">
                  {{- section.settings.body_text -}}
                </p>
              </div>
            </div>
          </div>
        </div>
        <div class="tmm-layout-grid tmm-features4-list">
          {%- if section.blocks.size > 0 -%}
            {%- for block in section.blocks -%}
              <div class="tmm-interaction_wrap">
                <div class="tmm-features4-item" {{ block.shopify_attributes }}>
                  <div class="tmm-margin-bottom tmm-margin-small">
                    <h3 class="tmm-heading-style-h4">{{- block.settings.heading -}}</h3>
                  </div>
                  <p>{{ block.settings.text }}</p>
                </div>
              </div>
            {%- endfor -%}
          {%- else -%}
            {%- for i in (1..3) -%}
              <div class="tmm-interaction_wrap">
                <div class="tmm-features4-item">
                  <div class="tmm-margin-bottom tmm-margin-small">
                    <h3 class="tmm-heading-style-h4">Cleanse and Prep Your Skin</h3>
                  </div>
                  <p>
                    Start your skincare routine by cleansing your face with our gentle vegan cleanser. This will remove
                    impurities and prepare your skin for the next steps.
                  </p>
                </div>
              </div>
            {%- endfor -%}
          {%- endif -%}
        </div>
        <div class="tmm-interaction_wrap">
          <div class="tmm-margin-top margin-xlarge">
            <div class="tmm-button-group">
              {%- if section.settings.button1_url != blank -%}
                <a
                  href="{{ section.settings.button1_url }}"
                  class="tmm-button_{{ section.id }} tmm-button-1 tmm-button-primary tmm-button{% if section.settings.button1_style == 'outline' %} tmm-is-secondary{% endif %}"
                >
                  {{- section.settings.button1_text -}}
                </a>
              {%- endif -%}
              {%- if section.settings.button2_url != blank -%}
                <a
                  href="{{ section.settings.button2_url }}"
                  class="tmm-button_{{ section.id }} tmm-button-2 tmm-is-link tmm-is-icon tmm-inline-block tmm-button-2 tmm-button-primary tmm-button{% if section.settings.button2_style == 'outline' %} tmm-is-secondary{% endif %}"
                >
                  <div>{{- section.settings.button2_text -}}</div>
                  <div class="tmm-icon-embed-xxsmall tmm-embed">
                    <svg
                      width="16"
                      height="16"
                      viewbox="0 0 16 16"
                      fill="none"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <path
                        d="M6 3L11 8L6 13"
                        stroke="{{ section.settings.button2_text_color }}"
                        stroke-width="1.5"
                      ></path>
                    </svg>
                  </div>
                </a>
              {%- endif -%}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

