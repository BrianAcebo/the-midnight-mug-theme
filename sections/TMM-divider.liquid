{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .tmm-section-{{ section.id }}.tmm-divider {
    max-width: {{ section.settings.container_size }}px;
  }

  .tmm-section-{{ section.id }}.tmm-divider .tmm-divider_line {
    background-color: {{ section.settings.divider_color }};
    height: {{ section.settings.divider_thickness }}px;
  }
{%- endstyle -%}

<div class="section__tmm-component tmm-section-{{ section.id }} section-{{ section.id }}-padding tmm-divider">
  <div class="tmm-divider_line">
    <div class="tmm-visually-hidden"></div>
  </div>
</div>

{% schema %}
{
  "name": "TMM Divider",
  "settings": [
    {
      "type": "select",
      "id": "container_size",
      "options": [
        {
          "value": "100",
          "label": "XS"
        },
        {
          "value": "300",
          "label": "S"
        },
        {
          "value": "600",
          "label": "M"
        },
        {
          "value": "900",
          "label": "L"
        },
        {
          "value": "1200",
          "label": "XL"
        },
        {
          "value": "1600",
          "label": "XXL"
        },
        {
          "value": "2400",
          "label": "XXXL"
        }
      ],
      "default": "900",
      "label": "Container size"
    },
    {
      "type": "color",
      "id": "divider_color",
      "default": "#000000",
      "label": "Divider color"
    },
    {
      "type": "range",
      "id": "divider_thickness",
      "min": 0,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "Divider thickness",
      "default": 1
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    },
  ],
  "presets": [
    {
      "name": "TMM - Divider"
    }
  ]
}
{% endschema %}
