{{ 'TMM-image-banner-v1.css' | asset_url | stylesheet_tag }}

{%- style -%}
  #tmm-Banner-{{ section.id }} .tmm-image-banner__overlay {
    opacity: {{ section.settings.image_overlay_opacity | divided_by: 100.0 }};
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section
  id="tmm-Banner-{{ section.id }}"
  class="section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} tmm-image-banner__container"
>
  <div class="tmm-image-banner__wrapper">
    {%- if section.settings.image == blank -%}
      {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {%- else -%}
      {{
        section.settings.image
        | image_url: width: 3840
        | image_tag:
          width: section.settings.image.width,
          height: section.settings.image.height,
          loading: section.settings.image_loading,
          class: 'tmm-image-banner__image'
      }}
    {%- endif -%}
    <div class="tmm-image-banner__overlay">
      <span class="visually-hidden tmm-hidden">Overlay for image</span>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "TMM Image Banner V1",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Banner image"
    },
    {
      "type": "range",
      "id": "image_overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Overlay opacity",
      "default": 0
    },
    {
      "type": "select",
      "id": "desktop_content_alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center",
      "label": "Content alignment"
    },
    {
      "type": "text",
      "id": "button_label_1",
      "default": "Button label",
      "label": "First button label",
      "info": "Leave the label blank to hide the button."
    },
    {
      "type": "url",
      "id": "button_link_1",
      "label": "First button link"
    },
    {
      "type": "checkbox",
      "id": "button_style_secondary_1",
      "default": false,
      "label": "Use outline button style"
    },
    {
      "type": "text",
      "id": "button_label_2",
      "default": "Button label",
      "label": "Second button label",
      "info": "Leave the label blank to hide the button."
    },
    {
      "type": "url",
      "id": "button_link_2",
      "label": "Second button link"
    },
    {
      "type": "checkbox",
      "id": "button_style_secondary_2",
      "default": false,
      "label": "Use outline button style"
    },
    {
      "type": "range",
      "id": "button_rounding",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Button rounding",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "t:sections.image-banner.blocks.heading.name",
      "limit": 1,
      "settings": [
        {
          "type": "header",
          "content": "Add multiple headings to create rotating effect."
        },
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Image banner",
          "label": "t:sections.image-banner.blocks.heading.settings.heading.label"
        },
        {
          "type": "inline_richtext",
          "id": "heading_2",
          "label": "Heading two"
        },
        {
          "type": "inline_richtext",
          "id": "heading_3",
          "label": "Heading three"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "h2",
              "label": "t:sections.all.heading_size.options__1.label"
            },
            {
              "value": "h1",
              "label": "t:sections.all.heading_size.options__2.label"
            },
            {
              "value": "h0",
              "label": "t:sections.all.heading_size.options__3.label"
            }
          ],
          "default": "h1",
          "label": "t:sections.all.heading_size.label"
        },
        {
          "type": "select",
          "id": "heading_tag",
          "options": [
            {
              "value": "h1",
              "label": "H1"
            },
            {
              "value": "h2",
              "label": "H2"
            },
            {
              "value": "h3",
              "label": "H3"
            },
            {
              "value": "h4",
              "label": "H4"
            },
            {
              "value": "h5",
              "label": "H5"
            }
          ],
          "default": "h2",
          "label": "Heading element"
        },
        {
          "type": "range",
          "id": "rotation_delay",
          "min": 1,
          "max": 10,
          "step": 1,
          "unit": "s",
          "label": "Rotation delay (seconds)",
          "default": 3
        },
      ]
    }
  ],
  "presets": [
    {
      "name": "TMM Image Banner V1"
    }
  ]
}
{% endschema %}
